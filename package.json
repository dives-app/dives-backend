{
  "name": "dives-backend",
  "version": "0.2.0",
  "description": "Serverless Typescript Apollo GraphQL API with PostgreSQL",
  "scripts": {
    "prebuild:local": "rm -Rf node_modules",
    "build:local": "npm_config_build_from_source=true yarn",
    "prebuild:lambda": "rm -Rf build_output && mkdir build_output",
    "build:lambda": "docker build -t dives_lambda_build -f build.Dockerfile . && docker run -v $(pwd)/build_output:/build_output/node_modules dives_lambda_build",
    "postbuild:lambda": "rm -Rf build_output/aws-sdk",
    "predeploy": "tsc && mv build_output build/node_modules",
    "deploy": "serverless deploy --stage staging || true",
    "postdeploy": "mv build/node_modules build_output",
    "migration:run": "typeorm migration:run",
    "pretest:e2e": "npm run test:db && typeorm migration:run -f test/ormconfig-test",
    "test:e2e": "jest test/",
    "test:unit": "jest src/",
    "test:db": "docker-compose -f test/docker-compose-test.yml up -d --build",
    "test": "npm run test:unit && npm run test:e2e",
    "serve": "serverless offline --allowCache",
    "debug": "SLS_DEBUG=* serverless offline --allowCache",
    "watch": "tsc -w",
    "predev": "rm -Rf build",
    "dev": "npm run dev:db && npm run dev:backend & npm run watch",
    "dev:backend": "nodemon",
    "dev:db": "docker-compose -f docker-compose-dev.yml up -d"
  },
  "dependencies": {
    "@types/graphql": "14.5.0",
    "apollo-server-lambda": "^3.0.0-alpha.3",
    "apollo-server-plugin-http-headers": "^0.1.3",
    "argon2": "^0.27.0",
    "aws-sdk": "^2.750.0",
    "bufferutil": "4.0.1",
    "canvas": "2.6.1",
    "class-validator": "^0.12.2",
    "nanoid": "^3.1.20",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.19",
    "type-graphql": "^1.0.0",
    "typeorm": "^0.2.26",
    "utf-8-validate": "5.0.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.62",
    "@types/aws-sdk": "^2.7.0",
    "@types/jest": "^26.0.13",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.10.0",
    "apollo-server-testing": "^3.0.0-alpha.3",
    "env-yaml": "^0.1.2",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "prettier": "2.1.1",
    "serverless": "^2.0.0",
    "serverless-offline": "^6.7.0",
    "serverless-s3-local": "^0.6.7",
    "ts-jest": "^26.3.0",
    "typescript": "^4.0.2"
  },
  "resolutions": {
    "graphql": "15.3.0"
  },
  "author": "Dives (https://github.com/dives-app)",
  "license": "MIT"
}
